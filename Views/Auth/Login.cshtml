<form method="post">
  <div class="row justify-content-center">
      <div class="col-6">
          <div class="justify-content-center"><h1>Вход</h1></div>

          <div class="mb-3">
                <input type="email" name="email"class="form-control" placeholder="Логин">
          </div>
          <div class="mb-3">    
                <input type="password" name="password" class="form-control" placeholder="Пароль">
          </div>
          <div class="mb-3 form-check">
              <input class="form-check-input" name="remember" type="checkbox" value="true" id="flexCheckDefault">
              <label class="form-check-label" for="flexCheckDefault">Запомнить меня?</label>
          </div>
          
            <button type="submit" class="btn btn-dark" asp-controller="auth" asp-action="login">Войти</button>
            <a asp-controller="auth" asp-action="registration" class="btn btn-light">Регистрация нового пользователя</a>
       </div>
    </div>
</form>