@model Cart


@if (Model == null)
{
    <h1>Товары в корзине отсутствуют</h1>
}
else
{
    <table class="table">
    <thead>
    <tr>
      <th scope="col">Название</th>
      <th scope="col">Кол-во</th>
      <th scope="col">Стоймость</th>
    </tr>
  </thead>

  <tbody>
      @foreach (var position in Model.Items)
       {
          <tr>
              <td>@position.Product.Name</td>
              <td>@position.Count</td>
              <td>@position.Product.Cost</td>
          </tr>
        }

  </tbody>
  <tfoot>
     <tr>
        <td>Итого</td>
        <td></td>
        <td> @Model.Amount₽</td>
    </tr>
  </tfoot>
</table>
<div class="row">
    <div class="col-3"> 
         <a class="btn btn-primary" href="/home/index">Продолжить покупки</a>
    </div>
    <div class="col-2">
        <button class="btn btn-primary" type="submit" href="#">Оформить заказ</button>
    </div>
</div>

}

