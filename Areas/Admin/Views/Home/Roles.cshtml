@model List<Role>
<div class="row">
        @await Html.PartialAsync("LeftAdminMenu")
    <div class="col-9">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th colspan="2">Список ролей</th>
                </tr>
            </thead>
            @foreach (var role in Model)
            {
                 <tbody class="table-group-divider">
                <tr>
                    <td class="w-75">@role.Name</td>
                    <td><a asp-area="admin" asp-controller="home" asp-action="removeRole" asp-route-roleId=@role.Id>Удалить</a></td>
                </tr>
            </tbody>
            }
           
            <tfoot>
                <tr>
                   <th colspan="1"></th>
                   <th><a asp-area="admin" asp-controller="home" asp-action="addRole">Добавить</a></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
