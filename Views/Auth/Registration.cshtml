<form method="post" class="center-block">
  <div class="row justify-content-center">
      <div class="col-6">
          <div class="justify-content-center"><h1>Регистрация</h1></div>
          <div class="mb-3">
                <input type="email" name="email"class="form-control" placeholder="Логин">
          </div>
          <div class="mb-3">    
                <input type="password" name="password" class="form-control" placeholder="Пароль">
          </div>
          <div class="mb-3">    
                <input type="password" name="confirmPassword" class="form-control" placeholder="Повторите пароль">
          </div>

            <button type="submit" class="btn btn-dark" asp-controller="auth" asp-action="registration">Зарегистрироваться</button>
       </div>
    </div>
</form>